<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sea_at_night">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar3"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/holo_blue_dark">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/app_name"
                android:textSize="@dimen/toolbar_title_size"
                android:textStyle="bold" />
        </android.support.v7.widget.Toolbar>

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="@string/create_profile_message"
            android:textSize="19sp" />

        <EditText
            android:id="@+id/profileEnterName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/enter_password_field_margin_right"
            android:layout_marginStart="@dimen/enter_password_field_margin_left"
            android:layout_marginTop="@dimen/enter_password_field_margin_top"
            android:hint="@string/enter_profile_name"
            android:imeOptions="actionSend"
            android:drawableStart="@drawable/user"
            android:drawablePadding="10dp"/>

        <EditText
            android:id="@+id/profileEnterPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/enter_password_field_margin_right"
            android:layout_marginStart="@dimen/enter_password_field_margin_left"
            android:layout_marginTop="@dimen/enter_password_field_margin_top"
            android:hint="@string/password"
            android:imeOptions="actionSend"
            android:inputType="textPassword"
            android:drawableStart="@drawable/key"
            android:drawablePadding="10dp" />

        <EditText
            android:id="@+id/profileRepeatPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/enter_password_field_margin_right"
            android:layout_marginStart="@dimen/enter_password_field_margin_left"
            android:layout_marginTop="@dimen/enter_password_field_margin_top"
            android:hint="@string/repeat_password"
            android:imeOptions="actionSend"
            android:inputType="textPassword"
            android:drawableStart="@drawable/key"
            android:drawablePadding="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/enter_password_field_margin_top"
            android:layout_marginEnd="@dimen/enter_password_field_margin_right"
            android:layout_marginStart="@dimen/enter_password_field_margin_left"
            android:text="Key to generate:" />

        <RadioGroup
            android:id="@+id/radioKeyType"
            android:layout_marginEnd="@dimen/enter_password_field_margin_right"
            android:layout_marginStart="@dimen/enter_password_field_margin_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/radioRSAKey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rsa_key"
                android:checked="true" />

            <RadioButton
                android:id="@+id/radioDSAKey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dsa_key" />

        </RadioGroup>

        <Button
            android:id="@+id/submitProfile"
            android:layout_width="@dimen/submit_password_width"
            android:layout_height="@dimen/submit_password_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/submit_password_margin_top"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:onClick="onSubmitClick"
            android:text="@string/submit"
            android:textSize="18sp" />
    </LinearLayout>
</ScrollView>
