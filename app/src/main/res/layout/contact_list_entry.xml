<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:orientation="horizontal"
    android:padding="5dp">

    <ImageView
        android:id="@+id/image_view_contact_list_entry"
        android:layout_width="@dimen/contacts_list_entry_icon_width"
        android:layout_height="@dimen/contacts_list_entry_icon_height"
        android:layout_weight="1"
        android:src="@drawable/personplaceholder"
        android:contentDescription="@string/contact_image" />

    <LinearLayout
        android:layout_width="@dimen/contacts_list_entry_text_layout_width"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/contacts_list_entry_text_layout_margin_start"
        android:layout_weight="5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contact_name_list_entry"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/name"
            android:gravity="center_vertical"
            android:textSize="@dimen/contacts_list_entry_text_name_size" />
    </LinearLayout>
</LinearLayout>